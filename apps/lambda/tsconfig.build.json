{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "outDir": "./dist",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist",
    "*.mjs",
    "test-*.mjs",
    "debug-*.mjs",
    "setup-*.mjs"
  ]
}
